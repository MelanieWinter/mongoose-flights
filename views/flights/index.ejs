<%- include('../partials/header') %>

<table>
    <thead>
        <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight#</th>
            <th>Departs</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% flights
            .sort((a, b) => new Date(a.departs) - new Date(b.departs))
            .forEach(function(f) { %>
            <tr <% if (new Date(f.departs) < new Date()) { %>style="color: red;"<% } %>>
                <td><%= f.airline %></td>
                <td><%= f.airport %></td>
                <td><%= f.flightNo %></td>
                <td><%= f.departs.toLocaleString() %></td>
                <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
            </tr>
        <% }); %>
    </tbody>
</table>

<%- include('../partials/footer') %>
